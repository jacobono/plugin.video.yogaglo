<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.yogaglo"
       name="YogaGlo"
       version="0.6"
       provider-name="jacobo">
        <requires>
	        <import addon="xbmc.python" version="2.19.0"/>
	        <import addon="script.module.xbmcswift2" version="2.4.0" />
                <import addon="script.module.beautifulsoup" version="3.2.1"/>
                <import addon="script.module.requests" version="2.4.3"/>
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
                <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
                <language>en</language>
                <platform>all</platform>
                <license>GPL 2.0</license>
                <summary lang="en">Play videos from http://www.yogaglo.com (with account).</summary>
                <description lang="en">
		  Play full-length yoga videos from YogaGlo, provided you have an account with them.
                </description>
                <website>http://www.yogaglo.com</website>
                <source>https://www.github.com/jacobono/xbmc-yogaglo-plugin</source>
                <email>daniel.j.mijares@gmail.com</email>
                <forum>https://www.github.com/jacobono/xbmc-yogaglo-plugin/issues</forum>
        </extension>
</addon>
